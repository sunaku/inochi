<%
  ##
  # Wraps the given content within <pre>
  # tags in a way that is Markdown-safe.
  #
  def preformatted content
    if content =~ /\S/
      content.gsub(/^/, ' ' * 4)
    else
      "<pre>#{content}</pre>"
    end
  end
%>

%+ "README"

%+ "USAGE"

%+ "TASKS"

%+ "PROJECTS"

%+ "TUTORIAL"

%+ "HACKING"

%+ "HISTORY"

%+ "CREDITS"

%+ "FURTHER"
